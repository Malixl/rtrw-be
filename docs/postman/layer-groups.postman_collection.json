{
  "info": {
    "name": "RTRW - Layer Groups",
    "_postman_id": "layer-groups-collection",
    "description": "Collection to test LayerGroup endpoints and ensure klasifikasi responses include layer_group.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"{{admin_password}}\"\n}" },
        "url": { "raw": "{{base_url}}/auth/login", "host": ["{{base_url}}"], "path": ["auth","login"] },
        "description": "Login to get an admin token. Set environment variable {{token}} after a successful login."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Login returns 200\", function () { pm.response.to.have.status(200); });",
              "// If response contains token, set it for subsequent requests",
              "try { var json = pm.response.json(); if (json.data && json.data.token) pm.environment.set('token', json.data.token); } catch (e) {}"
            ]
          }
        }
      ]
    },

    // LayerGroup - Public
    {
      "name": "LayerGroups - List (public)",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/layer-groups", "host": ["{{base_url}}"], "path": ["layer-groups"] }, "description": "Get all layer groups (ordered by urutan_tampil)." },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"List returns 200\", function () { pm.response.to.have.status(200); });"] }}]
    },
    {
      "name": "LayerGroups - Show (public)",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/layer-groups/{{layer_group_id}}", "host": ["{{base_url}}"], "path": ["layer-groups","{{layer_group_id}}"] }, "description": "Show specific layer group with optional nested klasifikasis when included." },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"Show returns 200\", function () { pm.response.to.have.status(200); });"] }}]
    },

    // LayerGroup - Admin CRUD
    {
      "name": "LayerGroups - Create (admin)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"nama_layer_group\": \"Peta Dasar\",\n  \"deskripsi\": \"Contains base map layers\",\n  \"urutan_tampil\": 1\n}" },
        "url": { "raw": "{{base_url}}/layer-groups", "host": ["{{base_url}}"], "path": ["layer-groups"] },
        "description": "Create a layer group (admin only). Use returned id to set {{layer_group_id}}."
      },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"Create layer group returns 201\", function () { pm.response.to.have.status(201); });","try { var json = pm.response.json(); if (json.data && json.data.id) pm.environment.set('layer_group_id', json.data.id); } catch (e) {}"] }}]
    },
    {
      "name": "LayerGroups - Update (admin)",
      "request": {
        "method": "PUT",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"nama_layer_group\": \"Peta Dasar V2\",\n  \"deskripsi\": \"Updated description\",\n  \"urutan_tampil\": 2\n}" },
        "url": { "raw": "{{base_url}}/layer-groups/{{layer_group_id}}", "host": ["{{base_url}}"], "path": ["layer-groups","{{layer_group_id}}"] },
        "description": "Update a layer group (admin only)."
      },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"Update returns 200\", function () { pm.response.to.have.status(200); });"] }}]
    },
    {
      "name": "LayerGroups - Delete (admin)",
      "request": { "method": "DELETE", "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }], "url": { "raw": "{{base_url}}/layer-groups/{{layer_group_id}}", "host": ["{{base_url}}"], "path": ["layer-groups","{{layer_group_id}}"] }, "description": "Delete a layer group (admin only)." },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"Delete returns 200\", function () { pm.response.to.have.status(200); });"] }}]
    },

    // Klasifikasi CRUD (admin)
    {
      "name": "Klasifikasi - Create (admin, include layer_group)",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"nama\": \"Sungai\",\n  \"deskripsi\": \"Layer sungai\",\n  \"rtrw_id\": {{rtrw_id}},\n  \"layer_group_id\": {{layer_group_id}},\n  \"tipe\": \"data_spasial\"\n}" },
        "url": { "raw": "{{base_url}}/klasifikasi", "host": ["{{base_url}}"], "path": ["klasifikasi"] },
        "description": "Create a klasifikasi and link it to a layer_group and RTRW. Sets {{klasifikasi_id}} on success."
      },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"Create klasifikasi returns 201\", function () { pm.response.to.have.status(201); });","try { var json = pm.response.json(); if (json.data && json.data.id) pm.environment.set('klasifikasi_id', json.data.id); } catch (e) {}"] }}]
    },
    {
      "name": "Klasifikasi - Show",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/klasifikasi/{{klasifikasi_id}}", "host": ["{{base_url}}"], "path": ["klasifikasi","{{klasifikasi_id}}"] }, "description": "Show klasifikasi and ensure it contains layer_group reference." },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"Show klasifikasi returns 200\", function () { pm.response.to.have.status(200); });"] }}]
    },

    // Child entities (check geo children)
    {
      "name": "Pola Ruang - List (check nested klasifikasi.layer_group)",
      "request": { "method": "GET", "url": { "raw": "{{base_url}}/polaruang", "host": ["{{base_url}}"], "path": ["polaruang"] }, "description": "List pola ruang and verify nested klasifikasi include layer_group." },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"Pola Ruang list returns 200\", function () { pm.response.to.have.status(200); });"] }}]
    },

    // Map endpoints
    {
      "name": "LayerGroups - With Klasifikasi (Map) - group format",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/layer-groups/with-klasifikasi?rtrw_id={{rtrw_id}}&only_with_children=true", "host": ["{{base_url}}"], "path": ["layer-groups","with-klasifikasi"], "query": [{ "key": "rtrw_id", "value": "{{rtrw_id}}" }, { "key": "only_with_children", "value": "true" }] },
        "description": "Default grouped response: LayerGroup -> klasifikasis (each with nested geo child arrays)"
      },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"Map group returns 200\", function () { pm.response.to.have.status(200); });"] }}]
    },
    {
      "name": "LayerGroups - With Klasifikasi (Flat per-type)",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/layer-groups/with-klasifikasi?format=flat&rtrw_id={{rtrw_id}}", "host": ["{{base_url}}"], "path": ["layer-groups","with-klasifikasi"], "query": [{ "key": "format", "value": "flat" }, { "key": "rtrw_id", "value": "{{rtrw_id}}" }] },
        "description": "Flat structure per Rafiq's snippet: returns rtrw meta and per-type arrays (klasifikasi_pola_ruang, klasifikasi_struktur_ruang, ...)."
      },
      "event": [{ "listen": "test", "script": { "exec": ["pm.test(\"Map flat returns 200\", function () { pm.response.to.have.status(200); });"] }}]
    }
  ],
  "event": [],
  "protocolProfileBehavior": {}
}
