{
  "info": {
    "name": "RTRW - Layer Groups",
    "_postman_id": "layer-groups-collection",
    "description": "Collection to test LayerGroup endpoints and ensure klasifikasi responses include layer_group.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"{{admin_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "auth",
            "login"
          ]
        }
      },
      "response": []
    },
    {
      "name": "LayerGroups - List (public)",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{base_url}}/layer-groups"
      }
    },
    {
      "name": "LayerGroups - Show (public)",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/layer-groups/{{layer_group_id}}"
      }
    },
    {
      "name": "LayerGroups - Create (admin)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nama_layer_group\": \"Peta Dasar\",\n  \"deskripsi\": \"Contains base map layers\",\n  \"urutan_tampil\": 1\n}"
        },
        "url": "{{base_url}}/layer-groups"
      }
    },
    {
      "name": "LayerGroups - Update (admin)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nama_layer_group\": \"Peta Dasar V2\",\n  \"deskripsi\": \"Updated description\",\n  \"urutan_tampil\": 2\n}"
        },
        "url": "{{base_url}}/layer-groups/{{layer_group_id}}"
      }
    },
    {
      "name": "LayerGroups - Delete (admin)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": "{{base_url}}/layer-groups/{{layer_group_id}}"
      }
    },
    {
      "name": "Klasifikasi - List (check layer_group)",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/klasifikasi"
      }
    },
    {
      "name": "Klasifikasi - Show (check layer_group)",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/klasifikasi/{{klasifikasi_id}}"
      }
    },
    {
      "name": "Klasifikasi - Create (admin, include layer_group)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"nama\": \"Sungai\",\n  \"deskripsi\": \"Layer sungai\",\n  \"rtrw_id\": {{rtrw_id}},\n  \"layer_group_id\": {{layer_group_id}},\n  \"tipe\": \"data_spasial\"\n}"
        },
        "url": "{{base_url}}/klasifikasi"
      }
    },
    {
      "name": "Pola Ruang - List (check nested klasifikasi.layer_group)",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/polaruang"
      }
    },
    {
      "name": "LayerGroups - With Klasifikasi (Map)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/layer-groups/with-klasifikasi?rtrw_id={{rtrw_id}}&only_with_children=true",
          "host": ["{{base_url}}"],
          "path": ["layer-groups","with-klasifikasi"],
          "query": [
            { "key": "rtrw_id", "value": "{{rtrw_id}}" },
            { "key": "only_with_children", "value": "true" }
          ]
        }
      }
    },
    {
      "name": "LayerGroups - With Klasifikasi (Flat per-type)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/layer-groups/with-klasifikasi?format=flat&rtrw_id={{rtrw_id}}",
          "host": ["{{base_url}}"],
          "path": ["layer-groups","with-klasifikasi"],
          "query": [
            { "key": "format", "value": "flat" },
            { "key": "rtrw_id", "value": "{{rtrw_id}}" }
          ]
        }
      }
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "if (!pm.environment.get('token')) {",
          "  pm.sendRequest({",
          "    url: pm.environment.get('base_url') + '/auth/login',",
          "    method: 'POST',",
          "    header: { 'Content-Type': 'application/json' },",
          "    body: { mode: 'raw', raw: JSON.stringify({ email: pm.environment.get('admin_email'), password: pm.environment.get('admin_password') }) }",
          "  }, function (err, res) {",
          "    if (err) { console.log('Auth auto-login failed', err); return; }",
          "    try { var json = res.json(); var token = (json.data && (json.data.token || json.data.access_token)) || json.token || json.access_token; if (token) pm.environment.set('token', token); } catch (e) { console.log('Auth parse error', e); }",
          "  });",
          "}"
        ]
      }
    }
  ],
  "protocolProfileBehavior": {}
}
